scalar Long

enum Gender {
  FEMALE
  MALE
}

enum ContactType {
  WORK_NUMBER
  HOME_NUMBER
  MOBILE_NUMBER
  EMAIL_ADDRESS
}

type Contact {
  id: Long
  type: ContactType!
  value: String!
}

type Person {
  age: Int!
  firstName: String!
  gender: Gender!
  id: Long
  lastName: String!
  contacts: [Contact]
}

type PersonPage {
  people: [Person]
  total: Long!
}

"""Query root"""
type Query {
  findById(id: Long): Person
  listOrderByLastName(size: Int!, page: Int!): PersonPage
}


